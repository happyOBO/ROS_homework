<launch>
    <!-- usb_cam -->
    <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen" >
        <param name="video_device" value="/dev/videoCAM" />
        <param name="autoexposure" value="false"/>
        <param name="exposure" value="100"/>
        <param name="image_width" value="640" />
        <param name="image_height" value="480" />
        <param name="pixel_format" value="yuyv" />
        <param name="camera_frame_id" value="usb_cam" />
        <param name="io_method" value="mmap"/>
    </node>

    <!-- motor -->
    <node name="xycar_motor_b2" pkg="xycar_motor" type="xycar_motor_b2.py" output="screen" >
        <param name="angle_offset" value="0" />
    </node>

    <!-- hough_find -->
    <node name="hough" pkg="auto_drive" type="hough_find_cam.py" output="screen" required="true"/>

    <!-- driver -->
    <node name="driver" pkg="auto_drive" type="hough_driver.py" output="screen" required="true"/> 

</launch>
